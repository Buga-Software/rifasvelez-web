---
import Slider from "@components/react/slider.tsx";
---

<header class="py-6 pt-28">
  <div class="grid gap-5 grid-rows-[auto_auto] lg:grid-rows-none lg:grid-cols-[3fr_1fr] lg:h-full items-stretch">
    <div class="rounded-2xl overflow-hidden h-auto lg:h-full">
      <Slider client:only="react" />
    </div>
    <div class="rounded-2xl overflow-hidden h-auto lg:h-full">
      <video
        autoplay
        loop
        playsinline
        controls
        muted
        preload="auto"
        class="w-full h-full object-cover"
      >
        <source src="/assets/Velez.mp4" type="video/mp4" />
      </video>
    </div>
  </div>
</header>
