---
import logo from "../../public/assets/velez.png";

import facebookIcon from "../../public/icons/facebook.svg";
import instagramIcon from "../../public/icons/instagram.svg";
import whatsappIcon from "../../public/icons/whatsapp.svg";
---

<footer class="bg-white rounded-3xl p-9">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 p-6">
    <div class="flex flex-col items-start">
      <img src={logo.src} alt="Velez Logo" class="h-20 mb-2" />
      <p class="text-[var(--primary)] text-sm italic ml-1">NIT: 1115081973-6</p>
      <div class="flex gap-4 mt-4">
        <a href="https://www.facebook.com/velezlatradicional" target="_blank" rel="noopener noreferrer">
          <img src={facebookIcon.src} alt="Facebook" class="size-8" />
        </a>
        <a href="https://www.instagram.com/velezlatradicional" target="_blank" rel="noopener noreferrer">
          <img src={instagramIcon.src} alt="Instagram" class="size-8" />
        </a>
        <a href="https://wa.me/573169419113" target="_blank" rel="noopener noreferrer">
          <img src={whatsappIcon.src} alt="WhatsApp" class="size-8" />
        </a>
      </div>
    </div>

    <div class="flex flex-col justify-start text-[var(--primary)] text-base">
      <h3 class="font-extrabold mb-2">Contáctanos</h3>
      <p class="mb-1">+57 3169419113</p>
      <p class="mb-1">Carrera 14 #15-26</p>
      <p>Horarios de atención</p>
    </div>

    <div class="flex flex-col justify-start text-[var(--primary)] text-base">
      <h3 class="font-extrabold mb-2">Información legal</h3>
      <a href="#" class="mb-1 hover:underline">Aviso legal</a>
      <a href="#" class="mb-1 hover:underline">Términos y condiciones</a>
      <a href="#" class="hover:underline">Políticas de privacidad</a>
    </div>
  </div>

  <hr class="border-t border-[var(--primary)] mx-6 mt-4" />

  <div class="flex flex-col md:items-start items-center px-6 py-4 text-sm text-[var(--primary)] gap-3">
    <span class="font-bold">Versión 1.0</span>
    <span class="mt-2 md:mt-0 text-center md:text-right">
      © Velez la tradicional de los bugueños. Todos los derechos reservados
    </span>
  </div>
</footer>

