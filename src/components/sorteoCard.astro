---
import Countdown from "../components/react/countdown";
const {sorteo} = Astro.props;
---
<div class="flex flex-col gap-6 p-6 sm:p-8 bg-white rounded-xl shadow-md w-full">
  <Countdown client:load targetDate={sorteo.fecha} />
  <div class="w-full">
    <img
      src={sorteo.img}
      alt={sorteo.alt}
      class="w-full rounded-xl shadow-md"
    />
  </div>
  <div class="w-full text-zinc-800">
    <h2 class="text-xl sm:text-2xl lg:text-3xl font-extrabold text-[var(--primary)]">
      {sorteo.titulo}
    </h2>

    <div class="space-y-3 text-sm mt-4 text-pretty sm:text-base lg:text-lg leading-relaxed font-medium">
      {
        sorteo.descripcion.map((linea:string) => {
          return linea.startsWith("-") ? (
            <ul class="list-disc list-inside">
              <li>{linea.replace("-", "").trim()}</li>
            </ul>
          ) : (
            <p>{linea}</p>
          );
        })
      }
      <p><strong>El sorteo se realizará el {sorteo.fecha}.</strong></p>
    </div>

    <a
      href={`https://wa.me/573169419113?text=${encodeURIComponent(sorteo.mensajeWhatsapp)}`}
      target="_blank"
      class="flex w-full justify-center text-center mt-6 px-6 py-3 rounded-full bg-[var(--primary)] text-white font-bold text-sm hover:brightness-110 transition"
    >
      ¡Participa ahora!
    </a>
  </div>
</div>
